{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true,
    "jsx": true,
    "spread": true,
    "experimentalObjectRestSpread": true,
    "destructuring": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "GLOBALS": {},
    "GLOBALS_JS_CSS": {}
  },
  "rules": {
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "new-cap": 2,
    "no-empty": 2,
    "no-shadow": [2, {"builtinGlobals": false, "hoist": "never"}],
    "no-unused-vars": [2, {"vars": "local", "args": "after-used", "varsIgnorePattern": "^React$"}],
    "eqeqeq": [2, "smart"],
    "semi": 2
  },
  "plugins": [
    "react"
  ]
}